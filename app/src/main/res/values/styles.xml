<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 统一Activity样式 -->
    <style name="App_Activity" parent="AppTheme" />

    <!--splash动画的样式-->
    <style name="App_Activity.Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--首页的样式-->
    <style name="App_Activity.MainActivity">
        <item name="windowNoTitle">true</item>
    </style>

    <!--Dialog的样式-->
    <style name="DialogNoBorder">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--Loading的样式-->
    <style name="LoadingIndicatorView">
        <item name="minWidth">48dp</item>
        <item name="maxWidth">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="maxHeight">48dp</item>
        <item name="indicatorName">BallLoaderIndicator</item>
    </style>


</resources>
